			"item": [
				{
					"name": "Sign Up",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"let randomUsername = Math.random().toString(36).substr(2,5);\r",
									"pm.environment.set(\"randomUsername\",\"Username \" + randomUsername);\r",
									"\r",
									"let randomPassword = Math.random().toString(36).substr(2,5);\r",
									"pm.environment.set(\"randomPassword\",\"Password \" + randomPassword);\r",
									"\r",
									"var Test = () => {\r",
									"\r",
									"pm.test(\"Comprobar sí el codigo del estatus es 200\", function () {\r",
									"    pm.expect(pm.response.code).to.be.oneOf([200]);\r",
									"});\r",
									"\r",
									"pm.test(\"Comprobar sí el tiempo de respuesta es menor a 6s\", function () {\r",
									"    pm.expect(pm.response.responseTime).to.be.below(500);\r",
									"});\r",
									"}\r",
									"\r",
									"pm.environment.set(\"Test\",Test.toString());"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"eval(pm.environment.get(\"Test\"))();\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "\r\n{\r\n    \"username\": \"{{randomUsername}}\",\r\n    \"password\": \"{{randomUsername}}\"\r\n}\r\n",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{URL}}/signup",
